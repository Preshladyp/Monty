#include "monty.h"
#include <string.h>

void free_stack(stack_t **stack);
int init_stack(stack_t **stack);
int check_mode(stack_t *stack);

/**
 * free_stack -This task Frees a stack_t stack.
 */
void free_stack(stack_t **stack)
{
    stack_t *tmp = *stack;

    while (*stack)
    {
        tmp = (*stack)->next;
        free(*stack);
        *stack = tmp;
    }
}

/**
 * init_stack -This task Initializes a stack_t starting with beginning
 *              stack and ending queue nodes.
 *
 * Return: If an error occurs - EXIT_FAILURE.
 *         Otherwise - EXIT_SUCCESS.
 */
int init_stack(stack_t **stack)
{
    stack_t *s;

    s = malloc(sizeof(stack_t));
    if (s == NULL)
        return (malloc_error());

    s->n = STACK;
    s->prev = NULL;
    s->next = NULL;

    *stack = s;

    return (EXIT_SUCCESS);
}

/**
 * check_mode -This task Checks if a stack_t linked list is in stack or queue mode.
 * Return:when or  If the stack_t is in stack mode - STACK (0).
 *         If the stack_t is in queue mode - QUEUE (1).
 *         Otherwise - 2.
 */
int check_mode(stack_t *stack)
{
    if (stack->n == STACK)
        return (STACK);
    else if (stack->n == QUEUE)
        return (QUEUE);
    return (2);
}
